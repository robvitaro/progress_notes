<p id="notice"><%= notice %></p>

<h1>Progress Notes</h1>

<table class="table table-responsive-lg">
  <thead>
    <tr>
      <th>Notes</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progress_notes.each do |progress_note| %>
      <tr>
        <td><%= progress_note.notes %></td>
        <td><%= progress_note.patient.name %></td>
        <td><%= link_to 'Show', progress_note %></td>
        <td><%= link_to 'Edit', edit_progress_note_path(progress_note) %></td>
        <td><%= link_to 'Destroy', progress_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Progress Note', new_progress_note_path, class: 'btn btn-primary' %>