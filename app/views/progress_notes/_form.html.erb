  <div class="form-group">
    <%= form.label :session_date %>
    <%= form.date_field :session_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, cols: 100, rows: 20, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
